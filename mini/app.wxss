/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*公共样式：箭头*/
.arrow{
  display: flex;
  justify-content:left;
  align-items: center;
}
.arrow::before{
  content: "";
  width:10rpx;
  height:10rpx;
  border-top:3rpx solid rgb(131, 129, 129);
  border-left:3rpx solid rgb(131, 129, 129);
  transform:rotate(-45deg);
  margin-left:50rpx;
}
/*2.箭头2*/
.arrow-1{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow-1::after{
  content:"";
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #ccc;
  transform:rotate(45deg);
}
/*第二个功能：通用灰色分隔块*/
.divider{
  height:15rpx;                  /*高度*/
  background:#f1f1f1;             /*灰色背景*/
  box-shadow: 0 5rpx 5rpx rgba(0,0,0,.1) inset;   /*阴影*/
}
/*超出的内容用省略号代替*/
.dian{
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
/*加载更多*/
/*6.加载更多*/
.loadmore {
  color: #888;
  font-size: 16px;
  line-height: 100px;
  text-align: center;
}

.loadmore.loading::before {
  content: '';
  width: 30px;
  height:30px;
  margin-top: -10px;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(-360deg);
  }
}