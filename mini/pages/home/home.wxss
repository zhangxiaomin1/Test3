/* pages/home/home.wxss */
.nav{
  display: flex;
  justify-content: space-around;
  height:100rpx;
  border-bottom:1px solid #ccc;
  align-items: center;
}

.nav .nav-item{
  display: block;
}
.nav-item text{
  font-size:14px;
}

.list{
  display: flex;
  margin-top:15rpx;
}
.list .list-item{
  display: flex;
  justify-content: left;
  border-bottom:1px solid #ccc;
  width:100%;
  height:260rpx;
}
.list-item image{
  width:350rpx;
  height:120px;
}
.list-item .item-1{
  display: flex;
  flex-direction: column; 
  margin-left:51rpx;
  margin-top:100rpx;
}
.list-item .item-1 .item-2{
  display: flex;
  flex-direction: row;
}
.list-item .item-1 .item-2 .size-2{
  width:50rpx;
  height:50rpx;
  margin-top:-8rpx;
}
.list-item .item-1 .item-2 .size-1{
  width:35rpx;
  height:35rpx;
  margin-top:0rpx;
}
.list-item .item-1 .item-2 view{
  display: block;
  font-size: 14px;
  width:150rpx;
  margin-left:10rpx;
}
.author{
  display: block;
  height:60rpx;
  width:300rpx;
  font-size: 14px;
}
.title{
  display: block;
  font-size:17px;
  height:70rpx;
  width:300rpx;
}

.swiper-tab{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 120rpx;
  }
  .swiper-tab-item{
  display: inline-block;
  width: 14.2%;
  color:#888888;
  font-size:15px;
  }
  .active{
  color:#FF7000;
  border-bottom: 4rpx solid #FF7000;
  }
  swiper{
    height:2800rpx;
  }