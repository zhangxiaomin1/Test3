<swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
  <swiper-item >
    <view class="list " wx:for="{{books}}" wx:key="{{id}}">
      <view class="list-item" >
        <image bindtap="showDetail" data-id="{{item.id}}" src="{{item.pic}}" mode="aspectFill" lazy-load/>
        <view class="item-1">
          <view class="dian title">{{item.title}}</view>
          <view  class="dian author">{{item.author}}</view>
          <view class="item-2">
            <image src="/assets/index/zan.png" mode="aspectFill" lazy-load class="size-1 "/>
            <view>{{item.zan}}亿</view>
            <image src="/assets/index/pinglun.png" mode="aspectFill" lazy-load class="size-2"/>
            <view>{{item.pinglun}}万</view>
          </view>
        </view>
      </view>
    </view>
